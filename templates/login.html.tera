{% extends "base" %}

{% block body %}
  <section class="hero is-primary is-fullheight is-bold">
    {% if failed %}
    <div class="notification is-danger">
      <button class="delete"></button>
      Login failed: Username or password is incorrect.
    </div>
    {% endif %}
    <div class="hero-body">
      <div class="container">
        <h1 class="title">
          FodMap
        </h1>
        <h2 class="subtitle">
          The pantry inventory system
        </h2>
        <form action="/login" method="post">
          <div class="field">
            <label class="label has-text-light">Login</label>
            <div class="control has-icons-left">
              <input type="text" placeholder="Username" class="input {% if failed %} is-danger {% endif %}" name="username">
              <span class="icon is-small is-left">
                <i class="fa fa-user"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <div class="control has-icons-left">
              <input type="password" placeholder="Password" class="input {% if failed %} is-danger {% endif %}" name="password">
              <span class="icon is-small is-left">
                <i class="fa fa-lock"></i>
              </span>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <input type="submit" class="button is-success is-inverted is-outlined" value="Login">
              <input type="reset" class="button is-danger is-inverted is-outlined" value="Reset">
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>
{% endblock %}
